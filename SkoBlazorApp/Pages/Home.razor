@page "/"
@using SkoBlazorApp.Data
@inject System.Net.Http.HttpClient Http
@inject CourseService CourseService;
@inject NavigationManager NavigationManager;


<h3 align="center">Мои курсы</h3>
<hr />
<div>
    <button class="btn btn-success" @onclick="@GoToAddCourse">Добавить курс</button>
</div>
<hr />
<div>
    Всего курсов: @_countCourses
</div>

<div class="table-responsive">
    <table class="table table-striped table-dark">
        <thead class="thead-dark">
            <tr>
                <td class="text-info">
                    №
                </td>
                <td class="text-info">
                    Категория
                </td>
                <td class="text-info">
                    Название
                </td>
                <td class="text-info">
                    Дата создания
                </td>
                <td class="text-info">
                    Дата редактирования
                </td>
                <td class="text-info">
                    Баллы
                </td>
                <td class="text-info">
                    Оценивающий
                </td>
            </tr>
        </thead>
        <tbody>
            @if (_myCourses == null)
            {
                <tr>Загрузка...</tr>
            }
            else if (_myCourses.Count == 0)
            {
                <tr>Нет записей!</tr>
            }
            else
            {
                int number = 1;
                @foreach (Course course in _myCourses)
                {
                    <tr>
                        <td>
                            @number
                        </td>
                        <td>
                            @course.Category
                        </td>
                        <td>
                            @course.Title
                        </td>
                        <td>
                            @course.Date
                        </td>
                        <td>
                            @if (course.DateEdit != null)
                            {
                                @course.DateEdit
                            }
                            else
                            {
                                @ValueIsNull
                            }
                        </td>
                        <td>
                            @if (course.Evaluation != null)
                            {
                                @course.Evaluation
                            }
                            else
                            {
                                @ValueIsNull
                            }
                        </td>
                        <td>
                            @if (course.Evaluating != null)
                            {
                                @course.Evaluating
                            }
                            else
                            {
                                @ValueIsNull
                            }
                        </td>
                        <td>
                            <button class="btn btn-primary" @onclick="@(() => ViewCourse(course.Id))">
                                <span class="oi oi-browser" aria-hidden="true"> Просмотреть</span>
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-secondary" @onclick="@(()=> EditCourse(course.Id))">
                                <span class="oi oi-pencil" aria-hidden="true"> Редактировать</span>
                            </button>
                        </td>
                    </tr>
                    number++;
                }
            }
        </tbody>
    </table>
</div>

@code
{
    public string ValueIsNull { get; set; } = "-";

    List<Course> _myCourses;

    private readonly SkoContext _skoContext = new SkoContext();

    int _countCourses;

    protected override async Task OnInitializedAsync()
    {

        _myCourses = await Task.Run(() => CourseService.GetCoursesByUserId(1));
        _countCourses = _myCourses.Count;
    }

    void GoToAddCourse()
    {
        NavigationManager.NavigateTo("/AddCourse/");
    }
    void ViewCourse(int id)
    {
        NavigationManager.NavigateTo($"/ViewCourse/{id}");
    }
    void EditCourse(int id)
    {
        NavigationManager.NavigateTo($"/EditCourse/{id}");
    }

}
