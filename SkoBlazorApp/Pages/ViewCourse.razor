@page "/ViewCourse/{Id}"
@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.EntityFrameworkCore
@using SkoBlazorApp.Data
@using SkoBlazorApp.Pages
@inject System.Net.Http.HttpClient Http
@inject CourseService CourseService;
@inject NavigationManager NavigationManager;

<h3 align="center">Просмотр курса</h3>

<form>
    <div class="row">
        <div class=" col-md-8">
            <div class="form-group">
                <label>ID курса:</label>
                <label>@_course.Id</label>
            </div>
            <div class="form-group">
                <label>Название курса:</label>
                <label>@_course.Title</label>
            </div>
            <div class="form-group">
                <label>Описание курса:</label>
                <label>@_course.Description</label>
            </div>
            <div class="form-group">
                <label>Оценка курса:</label>
                <label>@_course.Evaluation</label>
            </div>
            <div class="form-group">
                <label>Оценивающий:</label>
                <label>@_course.Evaluating</label>
            </div>
            <div class="form-group">
                <label>Дата создания курса:</label>
                <label>@_course.Date</label>
            </div>
            <div class="form-group">
                <label>Дата редактирования курса:</label>
                <label>@_course.DateEdit</label>
            </div>
            <div class="form-group">
                <label>Ссылка на внешний ресурс:</label>
                <label>@_course.Hyperlink</label>
            </div>
            <div class="form-group">
                <label>Файлы курса:</label>
                <label>@_course.FileName</label>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteEmployee" value="Удалить" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Назад" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }

    Course _course = new Course();
    protected override async Task OnInitializedAsync()
    {
        _course = await Task.Run(() => CourseService.GetCourse(Convert.ToInt32(Id)));
    }
    protected async void DeleteEmployee()
    {
        await CourseService.DeleteCourseAsync(1, _course.Id);
        NavigationManager.NavigateTo("/");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }
}
